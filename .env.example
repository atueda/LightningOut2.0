# Environment Configuration for Lightning Out Demo

# Server Configuration
PORT=3000
NODE_ENV=development

# Salesforce Configuration
# Replace with your actual Salesforce domain
SALESFORCE_DOMAIN=storm-f1b2bd8ede67bc.my.salesforce.com

# Salesforce Connected App Configuration (OAuth)
# Create a Connected App in Salesforce Setup -> App Manager
SALESFORCE_CLIENT_ID=YOUR_CONNECTED_APP_CLIENT_ID
SALESFORCE_CLIENT_SECRET=YOUR_CONNECTED_APP_CLIENT_SECRET
SALESFORCE_APP_ID=1UsHu000000oQTeKAM
SALESFORCE_COMPONENT_NAME=c-card-component
# Auth flow selection: set to "password" to force Username/Password flow (skips client_credentials)
# leave empty to try client_credentials first and fallback to password
SALESFORCE_AUTH_FLOW=password
# For Username/Password flow
SALESFORCE_USERNAME=your.user@example.com
# If IP is not relaxed, append security token to the password at runtime (PASSWORD + SECURITY_TOKEN)
SALESFORCE_PASSWORD=yourPassword
SALESFORCE_SECURITY_TOKEN=yourSecurityTokenIfNeeded
# Set true for Sandbox (or use SALESFORCE_LOGIN_URL=https://test.salesforce.com)
SALESFORCE_IS_SANDBOX=false

# OAuth Configuration
SALESFORCE_LOGIN_URL=https://login.salesforce.com
REDIRECT_URI=http://localhost:3000/auth/callback

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production

# CORS Configuration (comma-separated origins)
# Include full origins with protocol (http/https)
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:8080

# Security Configuration
ENABLE_HTTPS=false

# Logging Configuration
LOG_LEVEL=info

# Lightning Out App Configuration
LIGHTNING_OUT_APP_NAME=c:LightningOutApp
# Prefer SALESFORCE_COMPONENT_NAME; fallback kept for backward compatibility
LIGHTNING_COMPONENT_NAME=c-card-component
